<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="328dp"
        android:layout_height="267dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <ImageView
            android:id="@+id/potato"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="checkClicked"
            android:visibility="visible"
            app:srcCompat="@drawable/body" />

        <ImageView
            android:id="@+id/arms"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="checkClicked"
            android:visibility="invisible"
            app:srcCompat="@drawable/arms" />

        <ImageView
            android:id="@+id/ears"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="checkClicked"
            android:visibility="invisible"
            app:srcCompat="@drawable/ears" />

        <ImageView
            android:id="@+id/brows"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="checkClicked"
            android:visibility="invisible"
            app:srcCompat="@drawable/eyebrows" />

        <ImageView
            android:id="@+id/eyes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="checkClicked"
            android:visibility="invisible"
            app:srcCompat="@drawable/eyes" />

        <ImageView
            android:id="@+id/glass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="checkClicked"
            android:visibility="invisible"
            app:srcCompat="@drawable/glasses" />

        <ImageView
            android:id="@+id/hat"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="checkClicked"
            android:visibility="invisible"
            app:srcCompat="@drawable/hat" />

        <ImageView
            android:id="@+id/shoes"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="checkClicked"
            android:visibility="invisible"
            app:srcCompat="@drawable/shoes" />

        <ImageView
            android:id="@+id/nose"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="checkClicked"
            android:visibility="invisible"
            app:srcCompat="@drawable/nose" />

        <ImageView
            android:id="@+id/mouth"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="checkClicked"
            android:visibility="invisible"
            app:srcCompat="@drawable/mouth" />

        <ImageView
            android:id="@+id/mus"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="checkClicked"
            android:visibility="invisible"
            app:srcCompat="@drawable/mustache" />
    </FrameLayout>

    <android.support.v7.widget.GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="205dp"
        android:layout_height="172dp"
        android:layout_marginEnd="7dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.527"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frameLayout">

        <CheckBox
            android:id="@+id/armsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="arms"
            android:textSize="16dp" />

        <CheckBox
            android:id="@+id/earsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="ears"
            android:textSize="16dp"
            app:layout_column="0"
            app:layout_row="1" />

        <CheckBox
            android:id="@+id/browsCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="brows"
            android:textSize="16dp"
            app:layout_column="0"
            app:layout_row="2" />

        <CheckBox
            android:id="@+id/eyesCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="eyes"
            android:textSize="16dp"
            app:layout_column="0"
            app:layout_row="3" />

        <CheckBox
            android:id="@+id/glassCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="glass"
            android:textSize="16dp"
            app:layout_column="0"
            app:layout_row="4" />

        <CheckBox
            android:id="@+id/hatCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="hat"
            android:textSize="16dp"
            app:layout_column="4"
            app:layout_row="0" />

        <CheckBox
            android:id="@+id/shoesCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="shoes"
            android:textSize="16dp"
            app:layout_column="4"
            app:layout_row="1" />

        <CheckBox
            android:id="@+id/noseCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="nose"
            android:textSize="16dp"
            app:layout_column="4"
            app:layout_row="2" />

        <CheckBox
            android:id="@+id/mouthCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="checkClicked"
            android:text="mouth"
            android:textSize="16dp"
            app:layout_column="4"
            app:layout_row="3" />

        <CheckBox
            android:id="@+id/musCheckBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="checkClicked"
            android:text="mus"
            android:textSize="16dp"
            app:layout_column="4"
            app:layout_row="4" />
    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="91dp"
        android:layout_marginTop="4dp"
        android:background="@color/colorPrimary"
        android:onClick="dressAll"
        android:text="Dress all"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="81dp"
        android:background="@color/colorPrimary"
        android:onClick="clearAll"
        android:text="Clear all"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gridLayout" />

</android.support.constraint.ConstraintLayout>